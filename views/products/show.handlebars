<header class="page-header row">
  <div class="col-md-4">
    </div>
  <div class="col-md-8">
    <h1>{{ product.name }}</h1>
    <h2>Price: ${{ product.price}}</h2>
  </div>
</header>


<div class="details">
  <div class="col-md-8">
    <h2>Description</h2>
    <p>{{ product.description }}</p>

    <h2>SKU</h2>
    <p>{{ product.sku }}</p>

    <h2>Category ID</h2>
    <p>{{ product.category.name }}</p>

    <a href="#" class="btn btn-lg btn-primary">Add Me to Shopping Cart!</a>
  </div>
</div>
